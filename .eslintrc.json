{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 1 }],
    "quotes": ["error", "single"]
  }
}
